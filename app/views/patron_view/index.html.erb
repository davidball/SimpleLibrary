<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Arbor Library Catalog</h1>
<form action="index_submit" method="get" accept-charset="utf-8">
	<label for="search">Search:</label><input type="text" name="search" value="" id="search">
	

	<p><input type="submit" value="Continue &rarr;"></p>
</form>
<% @books.each do |book| %>
  <div class="entry">
    <h3 class="title"><%= link_to h(book.title), :controller=>:books,:action=>:show, :id=>book %></h3>
    <h3 class="catalog">Catalog:&#32;<%= book.dewey %>&#32;<%= book.cutter %></h3>
    <h3 class="author">By <%= book.author_last %>&#44;&#32;<%= book.author_first %></h3>
    <%= sanitize(book.description) %>
    <div class="price_line">
      <span class="price"><%= book.price %></span>
    </div>
  </div>
<% end %>